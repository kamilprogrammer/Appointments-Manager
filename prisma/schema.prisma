generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  password  String
  email     String   @unique
  doctor Doctor?
  patient Patient?

  @@map("Users")
}

model Patient {
  id          Int           @id @default(autoincrement())
  firstname   String?
  lastname    String?
  gender      String
  dateOfBirth DateTime?
  address     String?
  phone       String        @unique
  parentId    Int?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime?
  appoinments Appointment[]
  parent      Patient?      @relation("Family", fields: [parentId], references: [id])
  children    Patient[]     @relation("Family")
  user        User?   @relation(fields: [userId], references: [id])
  userId Int? @unique

  @@map("Patients")
}

model Doctor {
  id          Int           @id @default(autoincrement())
  firstname   String
  lastname    String?
  phone       String?        
  gender      String
  phone2      String?       
  role        String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime? 
  appointments Appointment[]
  user   User?   @relation(fields: [userId], references: [id])
  userId Int? @unique

  @@map("Doctors")
}

model Appointment {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  date        DateTime?
  EndDate     DateTime?
  status      String?
  verified    Boolean?
  patientId   Int?
  doctorId    Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  doctor      Doctor?   @relation(fields: [doctorId], references: [id])
  patient     Patient?  @relation(fields: [patientId], references: [id])

  @@map("Appointments")
}
