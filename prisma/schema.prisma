generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  password  String
  doctorId  Int? @unique
  doctor    Doctor?  @relation(fields: [doctorId], references: [id])
  patientId Int? @unique
  patient   Patient? @relation(fields: [patientId], references: [id])
  @@map("Users")
}

model Patient {
  id          Int          @id @default(autoincrement())
  firstname   String?
  lastname    String?
  gender      String
  dateOfBirth DateTime?
  address     String?
  phone       String       @unique
  appoinments Appointment[]
  parentId     Int?  
  parent       Patient?   @relation("Family", fields: [parentId], references: [id])
  children     Patient[]  @relation("Family")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime?
  user        User?
  @@map("Patients")
}

model Doctor {
  id          Int          @id @default(autoincrement())
  firstname   String
  lastname    String?
  phone       String       @unique
  phone2      String?      @unique
  role        String?
  appoinments Appointment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime?
  user        User?
  @@map("Doctors")
}

model Appointment  {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  date        DateTime?
  EndDate     DateTime?
  status      String?
  verified    Boolean?
  patient     Patient?  @relation(fields: [patientId], references: [id])
  patientId   Int?
  doctor      Doctor?   @relation(fields: [doctorId], references: [id])
  doctorId    Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  @@map("Appointments")
}
